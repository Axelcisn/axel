{
  "cSpell.enabled": true,
  "cSpell.configFile": "cspell.json",
  "cSpell.checkLimit": 500,
  "cSpell.showAutocompleteSuggestions": true,

  // Silence CSS "unknown at rule" for Tailwind @tailwind
  "css.lint.unknownAtRules": "ignore",

  // Make sure Tailwind syntax is recognized in CSS
  "files.associations": {
    "*.css": "tailwindcss"
  }
}